@model DevTest.ViewModels.ErrorViewModel
@{
	ViewData["Title"] = "Error";
	
}

<div class="row">
	<div class="text-center">
		<div class="col-md-3 col-md-offset-4">
			<h1>Error!</h1>
			<p>Failed to create @ViewData.Model.Email</p>
			<p>@Html.ValidationMessage("Error")</p>
			<input type="button" value="Try Again" class="btn btn-danger" onclick="location.href='@Url.Action("Index","App")'" />
		</div>
	</div>
</div>